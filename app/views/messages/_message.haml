.message{ 'data-id': message.id }
  .message_up
    .up_name
      = message.user.name
    .up_data
      = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
  .message_down
    - if message.content.present?
      %p.down_content
        = message.content
    = image_tag message.image.url, class: 'down-content_image' if message.image.present?    